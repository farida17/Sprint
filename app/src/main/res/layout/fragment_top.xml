<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="681dp">


        <Button
            android:id="@+id/home_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="28dp"
            android:onClick="onHomeClicked"
            android:text="Дом"
            app:layout_constraintBottom_toTopOf="@+id/health_button"
            app:layout_constraintEnd_toStartOf="@+id/work_button"
            app:layout_constraintHorizontal_bias="0.436"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/health_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="88dp"
            android:onClick="onHealthClicked"
            android:text="Здоровье"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/development_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="88dp"
            android:onClick="onDevelopmentClicked"
            android:text="Развитие"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/health_button" />

        <Button
            android:id="@+id/work_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="28dp"
            android:onClick="onWorkClicked"
            android:text="Работа"
            app:layout_constraintBottom_toTopOf="@+id/development_button"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/relationship_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="28dp"
            android:onClick="onRelationshipClicked"
            android:text="Отношения"
            app:layout_constraintBottom_toTopOf="@+id/home_button"
            app:layout_constraintEnd_toStartOf="@+id/hobby_button"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="279dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="8dp"
            android:text="@string/add_sprint"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#110C0B"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/hobby_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="24dp"
            android:onClick="onHobbyClicked"
            android:text="Хобби"
            app:layout_constraintBottom_toTopOf="@+id/work_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.838" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>